# Firebase Frontend Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Firebase Backend Configuration
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com

# Google Cloud Storage (for conversation backups)
GCS_BUCKET_NAME=your_gcs_bucket_name
GCS_PROJECT_ID=your_gcs_project_id
# Optional: Use service account key file instead of default credentials
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# AI API Keys
OPENAI_API_KEY=your_openai_api_key
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key

# Database (Optional - for PostgreSQL with Drizzle)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Storage Configuration
# Set to 'true' to force MemStorage even when Firebase is available (development)
FORCE_MEM_STORAGE=false

# Multi-tenant Configuration
# Rate limiting per tenant (requests per minute)
TENANT_RATE_LIMIT=100
# Maximum bots per user
MAX_BOTS_PER_USER=10
# Maximum sessions per bot
MAX_SESSIONS_PER_BOT=5

# Server Configuration
PORT=3333
NODE_ENV=development

# JWT Secret (for additional security if needed)
# JWT_SECRET=your_jwt_secret_key

# WhatsApp Configuration (if using WhatsApp integration)
# WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
# WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token